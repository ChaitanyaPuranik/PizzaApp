<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermProject.UI.CheckOutPage"
             Shell.TitleColor="Black"
             Title="CheckOutPage">
    <VerticalStackLayout>
        <Image 
               x:Name="CheckImage"
               Source="check.png"
               HeightRequest="300"
               WidthRequest="300"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Scale="0"
               Margin="30"/>

        <Label 
               Scale="0"
               x:Name="Label"
               Text="Order Placed Successfully"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="30"
               TextColor="Green"/>

        <Button
            Clicked="OnClickHomePage"
            Margin="30"
            x:Name="HomeButton"
            Text="Go to Home Screen"
            BackgroundColor="DarkGoldenrod"
            CornerRadius="22"
            HorizontalOptions="Center"
            Padding="50,10"
            Scale="0"
            Opacity="0"/>


    </VerticalStackLayout>
</ContentPage>